<% layout('./layout/main.ejs') %>

<div class="row align-middle h-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-4 m-auto">
        <div class="auth-view">
            <div class="circle">
                <i class="fas fa-pencil-alt"></i>
            </div>
            <h1>Create Account</h1>
            <%= error %> 
            <form method="POST" action="/register">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= form.oldInput('name') %>" name="name" placeholder="Your name" />
                    <% if (form.hasError('name')) { %>
                        <%= form.getError('name') %> 
                    <% } %>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= form.oldInput('surname') %>" name="surname" placeholder="Your surname" />
                    <% if (form.hasError('surname')) { %>
                        <%= form.getError('surname') %> 
                    <% } %>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="<%= form.oldInput('email') %>" name="email" placeholder="Your email address" />
                    <% if (form.hasError('email')) { %>
                        <%= form.getError('email') %> 
                    <% } %>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" value="<%= form.oldInput('password') %>" name="password" placeholder="Your password" />
                    <% if (form.hasError('password')) { %>
                        <%= form.getError('password') %> 
                    <% } %>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" value="<%= form.oldInput('password_confirmation') %>" name="password_confirmation" placeholder="Confirm password" />
                    <% if (form.hasError('password_confirmation')) { %>
                        <%= form.getError('password_confirmation') %> 
                    <% } %>
                </div>
                <div class="d-flex justify-content-between align-items-center form-buttons">
                    <button type="submit" class="btn btn-primary">Register</button>
                    <a href="/login" class="btn btn-secondary">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>