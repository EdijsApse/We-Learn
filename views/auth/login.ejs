<% layout('./layout/main.ejs') %>

<div class="row align-middle h-100">
    <div class="col-12 col-sm-10 col-md-8 col-lg-4 m-auto">
        <div class="auth-view">
            <div class="circle">
                <i class="fas fa-unlock-alt"></i>
            </div>
            <h1>Login</h1>
            <form>
                <div class="form-group">
                    <input id="email" type="email" class="form-control" placeholder="Your email address" />
                </div>
                <div class="form-group">
                    <input id="password" type="password" class="form-control" placeholder="Your password" />
                </div>
                <div class="d-flex justify-content-between align-items-center form-buttons">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/register" class="btn btn-secondary">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>